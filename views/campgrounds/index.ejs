<% include ../partials/header.ejs %>
    
    <div class="container">
        <header>
            <div class="container">
                <div class="jumbotron ">
                    <h1>This is campgrounds page </h1>
                    <p>
                        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a>    
                    </p>
                </div>
            </div>
        </header>
        <div class="row" style="display: flex; flex-wrap: wrap;">
            <% campground.forEach( (camp) => { %>
                 <div class="col-md-3 col-sm-6">
                     <div class="thumbnail text-center">
                         <img src="<%= camp["image"] %>">
                         <div class="caption">
                             <h4><%= camp["name"] %></h4>
                         </div>   
                         <p>
                            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">More Info</a>    
                        </p>
                     </div>
                          
                 </div>
              
            <% }) %>    
        </div>
    </div>
<%include ../partials/footer.ejs %>
        
